<div class="page-add-post">
    <div class="container">
        <h2 class="text-center">ADD NEW TAG</h2>
        <div class="row">
            <div class="col-md-12">
                <form method="post" role="form" action="/admin/add-tag">
                    <div class="form-group mb-3">
                        <label> Name </label>
                        <input type="text" class="form-control" name="name" placeholder="Tag Name" required/>
                    </div>

                    <div class="form-group mb-3">
                      <label> Quantity </label>
                      <input type="number" class="form-control" name="quantity" placeholder="Quantity" required/>
                  </div>

                    <div class="form-group mb-3">
                        <label class="form-check-label">
                            Prioritize  
                        </label>
                        <select name="prioritize" id="" class="form-control">
                            <option value="0" selected>Secondary</option>
                            <option value="1">Primary</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" name="Submit" value="Create" class="btn btn-primary form-control" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>