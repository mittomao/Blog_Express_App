<div class="page-add-post">
    <div class="container">
        <h2 class="text-center">ADD NEW POST</h2>
        <div class="row">
            <div class="col-md-12">
                <form method="post" role="form" action="/admin/add-post">
                    <div class="form-group mb-3">
                      <label for="">Tag</label>
                      <select class="form-control" name="tag" id="tag">
                        <option value="">Choose Tag Name</option>
                        <option value="Html Css">Html Css</option>
                        <option value="Javascript">Javascript</option>
                        <option value="ReactJs">ReactJs</option>
                        <option value=".Net">.Net</option>
                        <option value="Sitecore">Sitecore</option>
                      </select>
                    </div>
                    <div class="form-group mb-3">
                        <label> Title </label>
                        <input type="text" class="form-control" name="title" placeholder="Title" required/>
                    </div>
                    <div class="form-group mb-3">
                      <label for="">Thumbnail</label>
                      <div class="preview-image disable">
                        <img src="" alt="">
                      </div>
                      <input type="file" class="form-control-file" id="thumbnail-btn" placeholder="" aria-describedby="fileHelpId" accept=".jpg, .jpeg, .png">
                      <input type="text" id="thumbnail-input" name="thumbnail" value="" />
                      <small id="fileHelpId" class="form-text text-muted">image size below 10mb</small>
                    </div>

                    <div class="form-check form-check-inline mb-3">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="status" id="" value="false"> Disable
                        </label>
                    </div>

                    <div class="form-group mb-3">
                        <label> Content </label>
                        <textarea class="form-control" id="editor-content" name="content"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="Submit" value="Create" class="btn btn-primary form-control" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>