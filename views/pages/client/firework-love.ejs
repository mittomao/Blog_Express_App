<div class="firework-love-form" data-page-create>
    <h1 class="text-center">Dành tặng những điều tuyệt vời nhất đến với những người yêu thương</h1>
    <form action="/projects/firework-love" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="loveName">Nhập Tên Người Thương</label>
            <input type="text" class="form-control" id="loveName" name="texts" />
        </div>
        <input type="hidden" name="isPreview" value="true" />
        <div class="form-group">
            <label for="images" class="form-label">Chọn hình ảnh</label>
            <input class="form-control" type="file" name="images" id="images" accept="image/*" multiple />
            <div class="preview-container" id="previewContainer"></div>

        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary mb-3">Preview</button>
        </div>
    </form>
</div>