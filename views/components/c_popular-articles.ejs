
<% if (popularArticle) { %>
    <%
        let title = popularArticle?.title || "";
        let image = popularArticle?.image || "";
        let desciption = popularArticle?.desciption || "";
        let author = popularArticle?.author || "";
        let createdAt = popularArticle?.createdAt || "";
        let link = popularArticle?.link || "#";
        let modifyClass = popularArticle?.isDemo ? 'demo' : '';
    
        let date=new Date(createdAt);
        let currentDay=date.getDate(); 
        let currentYear=date.getFullYear(); 
        let currentMonth=date.toLocaleString('default', { month: 'short' }); 
    %>
<div class="featured-article">
    <div class="featured-article__content row">
        <div class="col col-6 featured-article__image">
            <img src="<%= image %>" alt="">
        </div>
        <div class="col col-6 featured-article__detail">
            <h4><%= title %></h4>
            <p><%= desciption %></p>
            <div class="featured-article__date"><span class="icon-calendar"></span> <%= currentDay %> <%= currentMonth %>,<%= currentYear %> </div>
            <a href="<%= link %>" class="btn btn-primary">View more</a>
        </div>
    </div>
</div>

<%}%>