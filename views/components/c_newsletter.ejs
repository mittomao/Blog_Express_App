<% if (newsletter) { %>
<%
    let title = newsletter?.title || "";
    let description = newsletter?.description || "";
    let bgimage = newsletter?.bgimage || "";
    let modifyClass = newsletter?.isDemo ? 'demo' : '';
%>
<section class="components newsletter sidebar-box subs-wrap img py-4 <%= modifyClass %>" style="background-image: url('<%= bgimage %>');">
    <div class="overlay"></div>
    <h4 class="mb-4 sidebar-heading"><%= title %></h4>
    <p class="mb-4">
        <%= description %>
    </p>
</section>
<%}%>